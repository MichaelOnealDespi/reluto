        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="29dp"
            android:layout_height="23dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="28dp"
            app:layout_constraintStart_toStartOf="parent"
